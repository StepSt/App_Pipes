<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.FragmentCalc"
    android:background="@drawable/grid"
    xmlns:foo="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|left|bottom|right"
        android:background="@drawable/rounded_yelow"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp">

    <ListView
        android:layout_marginTop="45dp"
        android:layout_marginLeft="5dp"
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
        <ListView
            android:layout_marginTop="170dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/list1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </ListView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/logo"
                android:src="@mipmap/logo_yelow"
                android:layout_gravity="left|bottom"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:background="@drawable/rounded_yelow"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/by"
                android:background="@drawable/rounded"
                android:layout_weight="1"
                android:clickable="true">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:id="@+id/icon_by"
                            android:src="@drawable/ic_shopping_cart_white_48px"/>
                        <admin.example.com.pipes_v2.TextViewPlus
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_weight="0.1"
                            android:text="Корзина"
                            android:id="@+id/textView17"
                            foo:customFont="GOST type A.ttf"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:gravity="center_vertical|center"
                            android:clickable="true"/>
                    </LinearLayout>
                    <admin.example.com.pipes_v2.TextViewPlus
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:id="@+id/txt_count"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:background="@drawable/rounded_cicle"
                        foo:customFont="GOST type A.ttf"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="110dp" />
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</FrameLayout>